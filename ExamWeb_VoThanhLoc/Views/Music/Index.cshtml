@model List<Book>

<partial name="_ThongBao" />

<div class="row">
    <div class="col-md-6">
        <h2>LIST DIANHAC</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            Thêm mới đĩa nhạc
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa cd</th>
            <th>Giá </th>
            <th>Số lượng </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Price</td>
                <td>@x.Quantity</td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                        Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                        Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info pt-2">
    Có <b>@ViewBag.SUM </b> đĩa nhạc trong list
</div>